# dependencies
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# testing
/coverage

# next.js
/.next/
/out/

# production
/build

# misc
.DS_Store
*.pem

# debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# env files (can opt-in for committing if needed)
.env*
# But allow template files
!.env.local.template
!.env.test.example

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts

# Development tools (not needed in repository)
ngrok
ngrok-*.zip

# Claude Code development files (not needed in repository)
.playwright-mcp/

# Local evidence artifacts from testing
*-output.txt
first-load-report.json
playwright-report/
test-results/

